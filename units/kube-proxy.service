[Unit]
Description=Kubernetes Proxy
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=/bin/bash -c "/opt/bin/download-k8s-binary kube-proxy"
ExecStartPre=/bin/bash -c "/opt/bin/wupiao $(/usr/bin/etcdctl get /k8s/master):8080"
ExecStart=/bin/bash -c '/opt/bin/kube-proxy --master=`/usr/bin/etcdctl get /k8s/master`:8080 --logtostderr=true --healthz-bind-address=0.0.0.0'
Restart=always
RestartSec=10
SuccessExitStatus=2

[X-Fleet]
Global=true
MachineMetadata="router=true"